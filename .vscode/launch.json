    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Ansible Module",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "plugins.modules.${fileBasenameNoExtension}",
            "console": "internalConsole",
            "args": [
                "${workspaceFolder}/module_args/${fileBasenameNoExtension}.json"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/ansible_collections/hello/world"
            },
            "justMyCode": false
        },
        {
            "name": "PowerShell Ansible Module",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}"
        }
    ]
}
